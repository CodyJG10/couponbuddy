
@{
    ViewData["Title"] = "CreateLocationManager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Location Manager</h2>

<form asp-action="CreateLocationManager" method="post" class="form-group">
    <div class="form-group">
        <label class="form-control">Username</label>
        <input type="text" class="form-control" name="username" />
    </div>
    <div class="form-group">
        <label class="form-control">Location ID</label>
        <input type="text" class="form-control" name="locationId" />
    </div>
    <div class="form-group">
        <input type="submit" class="form-control" />
    </div>
</form>