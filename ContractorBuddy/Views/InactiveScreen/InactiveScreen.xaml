<Page x:Class="BrochureBuddy.Views.InactiveScreen.InactiveScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BrochureBuddy.Views.InactiveScreen"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InactiveScreen"
      Background="White"
      MouseDown="Page_MouseDown"
      xmlns:banner="clr-namespace:BrochureBuddy.Views.Shared"
      xmlns:viewmodels="clr-namespace:BrochureBuddy.ViewModels.InactiveScreen">

    <Page.DataContext>
        <viewmodels:InactiveScreenViewModel/>
    </Page.DataContext>

    <Grid>
        <Image Source="{Binding CurrentImage}"
               Stretch="Fill"/>
        <Image Source="/Assets/click_me.png"
               Width="350"
               Height="350"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               Margin="25"
               x:Name="imgClickMe">
            <Image.RenderTransform>
                <TranslateTransform x:Name="imgClickMeTransform" X="0" Y="0"/>
            </Image.RenderTransform>
            
        </Image>
    </Grid>
</Page>
