<form method="post" enctype="multipart/form-data" asp-action="UploadMedia">
    <div class="form-group">
        <h3 class="form-control">Cover Image</h3>
        <ul>
            @for (int id = 0; id < Model.Media.Count; id++)
            {
                var media = Model.Media[id];
                <li> 
                    <img src="@media" width="250" height="250" />
                    <a asp-action="DeleteCoverImage" asp-route-id="@id" style="color: red;">X</a>
                </li>
            }
        </ul>

        <div>
            <p>Upload Image Here</p>
            <input type="file" name="files" />
        </div>

        <div>
            <input class="btn btn-primary" type="submit" value="Upload" />
        </div>

    </div>
</form>