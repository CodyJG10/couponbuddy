@using CouponBuddy.Web.Models
@model ManageContentViewModel


@{
    ViewData["Title"] = "Manage Content";
}

<h2>Manage Content</h2>

<form method="post" enctype="multipart/form-data" asp-action="UploadLogo">
    <div class="form-group">

        <h1 class="form-control">Logo</h1>

        <img src="@Model.LogoImageUrl" width="250" height="250" />

        <div>
            <p>Upload Logo Image Here</p>
            <input type="file" name="files" />
        </div>

        <div>
            <input class="btn btn-primary" type="submit" value="Upload" />
        </div>

    </div>
</form>

