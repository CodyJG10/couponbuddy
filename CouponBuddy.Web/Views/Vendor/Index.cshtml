@model  IEnumerable<CouponBuddy.Entities.Location>

@{
    ViewData["Title"] = "Index";
}

<h2>Vendor Web Portal</h2>

<div class="container">
    <div class="col-lg-6">
        <p class="h1 text-center">Options</p>
        <div class="btn-group-vertical center-block">
            <a asp-action="ManageContent" class="btn btn-default">Manage Content</a>
            <a asp-action="ViewEdit" class="btn btn-default">Edit Info</a>
            <a asp-action="Analytics" class="btn btn-default">View Analytics</a>
        </div>
    </div>
</div>

<h1>Your Locations</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                <label class="control-label control">Location</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                @*<td>
                    <a asp-action="VendorDetails" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="RemoveVendor" asp-route-id="@item.Id">Remove</a>
                </td>*@
            </tr>
        }
    </tbody>
</table>