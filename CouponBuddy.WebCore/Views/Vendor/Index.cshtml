@model  IEnumerable<CouponBuddy.Entities.Location>

@{
    ViewData["Title"] = "Index";
}

<h2>Vendor Web Portal</h2>

<a class="btn btn-primary" role="button" asp-action="ManageContent">Manage Content</a>
<a class="btn btn-primary" role="button" asp-action="ViewEdit">Edit</a>
<a class="btn btn-primary" role="button" asp-action="Analytics">View Analytics</a>

<h1>Your Locations</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                <label class="control-label control">Location</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
            </tr>
        }
    </tbody>
</table>